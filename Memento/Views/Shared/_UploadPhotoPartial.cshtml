@model Memento.Models.AlbumViewModel

<div id="upload-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    @using (Ajax.BeginForm("UploadPhoto", "Albums",
    null,
    new AjaxOptions
    {
        HttpMethod = "POST"
    }, 
    new 
    { 
        id = "UploadForm",
        enctype = "multipart/form-data" 
    }))
    {
        @Html.AntiForgeryToken()

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">×</a>
                    <h3>Photo uploading</h3>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="albumId" value="@Model.AlbumId"/>
                    @Html.Partial("_InputFilePartial")
                </div>
            </div>
        </div>
    }
</div>
