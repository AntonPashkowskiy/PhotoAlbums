@using Memento.Models
@model Memento.Models.PersonalRoomViewModel

@{
    ViewBag.Title = "Pepsonal room";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = (CurrentUser)Session["CurrentUser"];
}

@using (Html.BeginForm("PersonalRoom", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        
    <div class="row">
        <div class="col-md-3">
            <img src="@Url.Content(currentUser.PhotoUrl)" class="img-responsive img-thumbnail user-avatar" alt="no image">
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary">Upload new avatar</button>
        </div>
        <div class="col-md-1">
            <input type="submit" value="Apply" class="btn btn-primary" />
        </div>
    </div>

    <div class="form-horizontal row">
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@(Model.FirstName ?? "")</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@(Model.LastName ?? "")</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@(Model.Login ?? "")</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumberOfAlbums, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@Model.NumberOfAlbums</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumberOfPhotos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@Model.NumberOfPhotos</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OverallAlbumsRating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@Model.OverallAlbumsRating</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OverallPhotosRating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p class="form-control-static">@Model.OverallPhotosRating</p>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to home", "Index")
</div>
